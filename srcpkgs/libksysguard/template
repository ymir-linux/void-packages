revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules gettext kauth qt5-host-tools qt5-qmake"
makedepends="plasma-framework-devel qt5-webchannel-devel knewstuff-devel
 kio qt5-tools-devel"
